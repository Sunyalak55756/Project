<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="411dp"
        android:layout_height="509dp"
        android:layout_gravity="center"
        android:background="@mipmap/bg2">

        <FrameLayout
            android:id="@+id/frameLayoutx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.625"
            tools:layout_editor_absoluteX="10dp">

            <EditText
                android:id="@+id/colorpet"
                style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                android:layout_width="284dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:background="@color/zxing_custom_result_view"
                android:ems="10"
                android:hint="Color"
                android:inputType="date|text"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/holo_green_light" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.761"
            tools:layout_editor_absoluteX="10dp">

            <EditText
                android:id="@+id/markingpet"
                style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                android:layout_width="284dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:background="@color/zxing_custom_result_view"
                android:ems="10"
                android:hint="Marking"
                android:inputType="date|text"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/holo_green_light" />

        </FrameLayout>

        <TextView
            android:id="@+id/Log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.28"
            android:text="แก้ไขสัตว์เลี้ยง"

            android:textColor="@android:color/white"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0.07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.186">

            <EditText
                android:id="@+id/nameuser"
                android:layout_width="284dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:background="@color/zxing_custom_result_view"
                android:ems="10"
                android:hint="Name"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/holo_green_light" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.343"
            tools:layout_editor_absoluteX="10dp">

            <EditText
                android:id="@+id/typepet"
                style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                android:layout_width="284dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:background="@color/zxing_custom_result_view"
                android:ems="10"
                android:hint="Type"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/holo_green_light" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayouta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.479"
            tools:layout_editor_absoluteX="10dp">

            <EditText
                android:id="@+id/breedpet"
                style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                android:layout_width="284dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:background="@color/zxing_custom_result_view"
                android:ems="10"
                android:hint="Breed"
                android:inputType="date|text"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/holo_green_light" />

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayoutx0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.903"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:id="@+id/Ic"
                android:layout_width="62dp"
                android:layout_height="27dp"
                android:layout_marginStart="56dp"
                android:layout_marginBottom="8dp"
                android:text="Image"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/uploadpet"
                android:layout_width="98dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:text="Browse..."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.605"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/submitpet"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"

        android:background="@mipmap/blue"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98" />
  </LinearLayout>